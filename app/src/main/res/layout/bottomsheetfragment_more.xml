<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"

    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Radio_image"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/shareImageView"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/radioerror" />

        <ImageView
            android:id="@+id/add_alarm_btn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="9dp"

            android:src="@drawable/ic_add_alarm"
            app:layout_constraintBottom_toTopOf="@id/Radio_nameTXview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/VistitStationhomepageIm"
            app:layout_constraintTop_toBottomOf="@id/Radio_image" />

        <ImageView
            android:id="@+id/VistitStationhomepageIm"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="9dp"

            android:src="@drawable/chrome"
            app:layout_constraintBottom_toTopOf="@id/Radio_nameTXview"
            app:layout_constraintEnd_toEndOf="@id/add_alarm_btn"
            app:layout_constraintStart_toEndOf="@+id/shareImageView"
            app:layout_constraintTop_toBottomOf="@id/Radio_image" />



        <ImageView
            android:id="@+id/shareImageView"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="37dp"
            android:contentDescription="TODO"
            android:src="@drawable/share"
            app:layout_constraintBottom_toTopOf="@id/Radio_nameTXview"
            app:layout_constraintEnd_toStartOf="@+id/VistitStationhomepageIm"
            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@id/Radio_image" />



        <TextView
            android:id="@+id/Radio_nameTXview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="18dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/Radio_HomepageTXview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shareImageView" />

        <TextView
            android:id="@+id/Radio_HomepageTXview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="18dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            
            app:layout_constraintBottom_toTopOf="@+id/Radio_StreamURLTXview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Radio_nameTXview" />

        <TextView
            android:id="@+id/Radio_StreamURLTXview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="19dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:isScrollContainer="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            
            app:layout_constraintBottom_toTopOf="@+id/Radio_CountryTXview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Radio_HomepageTXview" />

        <TextView
            android:id="@+id/Radio_CountryTXview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="18dp"
            
            app:layout_constraintBottom_toTopOf="@+id/Radio_StateTXview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Radio_StreamURLTXview" />


        <TextView
            android:id="@+id/Radio_StateTXview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="18dp"
            
            app:layout_constraintBottom_toTopOf="@+id/Radio_LanguageTXview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Radio_CountryTXview" />

        <TextView
            android:id="@+id/Radio_LanguageTXview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="18dp"
            
            app:layout_constraintBottom_toTopOf="@+id/Radio_BitrateTXview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Radio_StateTXview" />

        <TextView
            android:id="@+id/Radio_BitrateTXview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="19dp"
            
            app:layout_constraintBottom_toTopOf="@+id/Radio_TagsTXview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Radio_LanguageTXview" />

        <TextView
            android:id="@+id/Radio_TagsTXview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="9dp"
            
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Radio_BitrateTXview" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>








